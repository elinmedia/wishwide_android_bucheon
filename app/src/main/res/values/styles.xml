<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorDarkBlack</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/colorVividCyan</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>

        <item name="windowActionBar">true</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.Dialog.Alert"/>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme"/>
    <style name="AppTheme.PopupOverlay"/>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:listPreferredItemHeightLarge">2dp</item>
    </style>
</resources>
