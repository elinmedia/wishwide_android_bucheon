<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/transparent"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:background="@drawable/round_corner_white"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_margin_24"
            android:paddingBottom="@dimen/activity_margin_24"
            android:paddingLeft="@dimen/activity_margin_32"
            android:paddingRight="@dimen/activity_margin_32">


        <LinearLayout
                android:gravity="center"
                android:paddingBottom="@dimen/activity_margin_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_received_benefit_guide"
                    android:padding="@dimen/activity_margin_16"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <Button
                    android:background="@drawable/round_corner_white"
                    android:layout_weight="1"
                    android:id="@+id/btn_case_1"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="@dimen/activity_margin_16"/>

            <Button
                    android:background="@drawable/round_corner_white"
                    android:layout_weight="1"
                    android:id="@+id/btn_case_2"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>