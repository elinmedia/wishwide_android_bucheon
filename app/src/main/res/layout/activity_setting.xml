<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.media.mobile.elin.wishwidemobile.Activity.SettingActivity">

    <TextView
            android:background="@color/light_gray"
            android:textColor="@color/black"
            android:text="계정정보"
            android:padding="@dimen/activity_margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_marginBottom="@dimen/activity_margin_16"
            android:padding="@dimen/activity_margin_16"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:paddingTop="@dimen/activity_margin_16"
                android:paddingBottom="@dimen/activity_margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center_vertical|right"
                    android:textColor="@color/black"
                    android:text="전화번호"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_phone"
                    android:paddingLeft="@dimen/activity_margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:paddingTop="@dimen/activity_margin_16"
                android:paddingBottom="@dimen/activity_margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center_vertical|right"
                    android:textColor="@color/black"
                    android:text="이름"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_name"
                    android:paddingLeft="@dimen/activity_margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:paddingTop="@dimen/activity_margin_16"
                android:paddingBottom="@dimen/activity_margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center_vertical|right"
                    android:textColor="@color/black"
                    android:text="생년월일"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_birth"
                    android:paddingLeft="@dimen/activity_margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:paddingTop="@dimen/activity_margin_16"
                android:paddingBottom="@dimen/activity_margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center_vertical|right"
                    android:textColor="@color/black"
                    android:text="성별"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_gender"
                    android:paddingLeft="@dimen/activity_margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:paddingTop="@dimen/activity_margin_16"
                android:paddingBottom="@dimen/activity_margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center_vertical|right"
                    android:textColor="@color/black"
                    android:text="이메일"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_email"
                    android:paddingLeft="@dimen/activity_margin_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:textColor="@color/black"
                android:background="@color/light_gray"
                android:layout_gravity="right|center_horizontal"
                android:id="@+id/btn_logout"
                android:text="로그아웃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

